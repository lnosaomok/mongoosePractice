<div class="container">
    <div class="card-panel">
        <div>
            <h1>Edit
                <%= foundUser.name %>'s Tweet</h1>
            <h3 class="center-align">Edit Tweet </h3>

        </div>
    </div>
    <div class="row">
        <form class="col s12" action="/users/<%= foundUser.id %>/tweets/<%= foundTweet.id %>?_method=PUT" method="POST">

            <div class="row">
                <div class="input-field col s12">
                    <em>Tweet Text</em>
                    <input id="name" type="text" name="tweetText" value="<%= foundTweet.tweetText %>" required>

                </div>

            </div>

            <div class="row">

                <div class="row">
                    <div class="input-field col s12">
                        <em>Entry</em>
                        <textarea id="textarea1" class="materialize-textarea" name="entry" required> <%= log.entry %></textarea>
                    </div>
                </div>

            </div>

            <p>
                <label>
                    <input type="checkbox" class="filled-in" name="shipIsBroken" checked="<%= log.shipIsBroken %>" />
                    <span>Ship is Broken</span>
                </label>
            </p>

            <button class="btn waves-effect waves-light" type="submit" name="action">Submit

            </button>
        </form>
    </div>