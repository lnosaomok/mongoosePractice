<div class="container">
    <div class="card-panel">
        <div>
            <h3 class="center-align">
                <%= user.name%>'s Detail Page <i class="medium material-icons">account_circle</i>
            </h3>


        </div>
    </div>
    <div class="row">
        <form class="col s12" action="/users/<%= user.id %>/tweets" method="POST">
            <h4 class="text-center">Create New Tweet</h4>
            <div class="row">
                <div class="input-field col s12">
                    <em>Tweet Text</em>
                    <input id="name" type="text" name="tweetText" required>

                </div>

            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit

            </button>
        </form>

        <ul class="Logs collection with-header">
            <li class="collection-header">
                <h4> Tweets
                </h4>

            </li>
            <% if (user.tweets) { %>
                <% user.tweets.forEach((element, index) => { %>

                    <li class="collection-item">
                        <div>
                            <h5>
                                <a href="/logs/<%=element._id %>">
                                    <%= element.tweetText %>
                                        <form action="/logs/<%= element._id %>?_method=DELETE" method="POST">
                                            <button class="btn btn-flat secondary-content"><i
                                        class="small material-icons">delete</i></button>
                                        </form>
                                </a>
                            </h5>
                            <a href="/logs/<%= element._id %>/edit" class="secondary-content"><i
                            class="small material-icons">create</i></a>
                        </div>
                    </li>
                    <% }) %>
                        <% }%>




        </ul>
    </div>