<div class="container">

    <h3 class="center-align grey-text darken-4">
        <%= album.name%>'s Song List <i class="medium material-icons">audiotrack</i>
    </h3>


    <div class="row">
        <div class="col m7 push-m5">
            <ul class="songs collection with-header">
                <li class="collection-header">
                    <h4> Songs
                    </h4>

                </li>
                <% if (album.songs) { %>
                    <% album.songs.forEach((element, index) => { %>

                        <li class="collection-item">
                            <div>
                                <h5>
                                    <a href="#">
                                        <%= element.songName %>
                                            <form action="/albums/<%= album._id %>/songs/<%= element._id %>?_method=DELETE" method="POST">
                                                <button class="btn btn-flat secondary-content"><i
                                            class="small material-icons">delete</i></button>
                                            </form>
                                    </a>
                                </h5>
                                <a href="/albums/<%= album._id %>/songs/<%= element._id %>/edit" class="secondary-content"><i
                                class="small material-icons">edit</i></a>
                            </div>
                        </li>
                        <% }) %>
                            <% }%>




            </ul>
        </div>
        <br />
        <div class="col m5 pull-m7">
            <form class="col s12" action="/albums/<%= album.id %>/songs" method="POST">
                <h5 class="text-center">Create New Song <button class="btn waves-effect waves-light" type="submit" name="action">
                        <i class="medium material-icons">send</i>
                    </button></h5>
                <div class="row">
                    <div class="input-field col s12">

                        <input id="name" type="text" name="songName" required>
                        <em>Song Name</em>
                    </div>

                </div>

            </form>

        </div>
    </div>
</div>